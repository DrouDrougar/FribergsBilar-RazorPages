@page
@model FribergsBilar_RazorPages.Pages.Bookings.EditModel

@{
    ViewData["Title"] = "Edit";
}
<section>
    <h1>Edit</h1>

    <h4>Booking</h4>
</section>

<hr />
<section>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Booking.BookingId" />
                <div class="form-group">
                    <label asp-for="Booking.OrderDate" class="control-label"></label>
                    <input asp-for="Booking.OrderDate" class="form-control" />
                    <span asp-validation-for="Booking.OrderDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Booking.ReturnDate" class="control-label"></label>
                    <input asp-for="Booking.ReturnDate" class="form-control" />
                    <span asp-validation-for="Booking.ReturnDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Booking.Car" class="control-label"></label>
                    <select asp-for="Booking.CarId" class="form-control" asp-items="ViewBag.CarId"></select>
                    <span asp-validation-for="Booking.CarId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Booking.Customer" class="control-label"></label>
                    <select asp-for="Booking.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                    <span asp-validation-for="Booking.CustomerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</section>

<section>
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
